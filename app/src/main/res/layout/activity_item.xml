<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_material_light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/listitembody"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon"
                            android:scaleType="fitXY"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/soup"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/gradient"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_margin="10dp"
                            android:text="Name of Dish"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="@color/abc_primary_text_disable_only_material_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_margin="10dp"
                            android:text="160 mins"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textColor="@color/abc_primary_text_disable_only_material_dark"/>
                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1">
                            <Button
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/favouritesshape"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:text="\u2661"
                                android:layout_gravity="center"
                                android:textSize="20sp"
                                android:textColor="@color/abc_input_method_navigation_guard"/>
                        </FrameLayout>

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@color/switch_thumb_disabled_material_dark"
                        android:elevation="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_margin="10dp"
                            android:text="What do I need ?"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_weight="2"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <com.krish.indiancook.utils.NonScrollListView
                        android:id="@+id/ingredientList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:cacheColorHint="#00000000" >
                    </com.krish.indiancook.utils.NonScrollListView >
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@color/switch_thumb_disabled_material_dark"
                        android:elevation="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_margin="10dp"
                            android:text="How do I Cook ?"
                            android:layout_gravity="center"
                            android:gravity="left"
                            android:layout_weight="2"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <com.krish.indiancook.utils.NonScrollListView
                        android:id="@+id/directionList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1">
                    </com.krish.indiancook.utils.NonScrollListView>
                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/toolbarlayout"
                layout="@layout/toolbarwithsearchtransparent"
                ></include>
        </FrameLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/globalnavmenu"
        />
</android.support.v4.widget.DrawerLayout>